<p id="notice"><%= notice %></p>

<h1>Dojos</h1>

<table class="table p-5">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Dirección</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dojos.each do |dojo| %>
      <tr>
        <td><%= dojo.name %></td>
        <td><%= dojo.email %></td>
        <td><%= dojo.address %></td>
        <td><%= dojo.active %></td>
        <td><%= link_to 'Mostrar', dojo, class:'btn btn-danger' %></td>
        <td><%= link_to 'Editar', edit_dojo_path(dojo), class:'btn btn-danger' %></td>
        <td><%= link_to 'Destruir', dojo, method: :delete, data: { confirm: '¿Estás seguro?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Dojo', new_dojo_path, class:'btn btn-danger' %> | <%= link_to 'Atrás', info_path, class:'btn btn-danger'  %>
