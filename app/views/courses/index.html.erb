<p id="notice"><%= notice %></p>

<h1>Cursos</h1>

<table class="table p-5">
  <thead class="thead-dark">
    <tr>
      <th>Dojo</th>
      <th>Sensei</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.dojo.name %></td>
        <td><%= course.sensei_courses.name %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= link_to 'Mostrar', course, class:'btn btn-danger'%></td>
        <td><%= link_to 'Editar', edit_course_path(course), class:'btn btn-danger' %></td>
        <td><%= link_to 'Destruir', course, method: :delete, data: { confirm: '¿Estás seguro?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

