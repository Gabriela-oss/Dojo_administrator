<h1>Judokas</h1>

<table class="table p-5">
  <thead class="thead-dark">
    <tr>
      <th>Nombre</th>
      <th>Dojo</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @judokas.each do |judoka| %>
      <tr>
        <td><%= judoka.name %></td>
        <td><%= judoka.dojo.name %></td>
        <td><%= judoka.id_card %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


