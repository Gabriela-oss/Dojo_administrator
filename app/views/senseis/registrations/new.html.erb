<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "senseis/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.label :name %><br />
    <%= f.name_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.last_name_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

   <div class="field">
    <%= f.label :surname %><br />
    <%= f.surname_field :surname, autofocus: true, autocomplete: "surname" %>
  </div>

  <div class="field">
   <%= f.label :id_type %><br />
   <%= f.id_type_field :id_type, autofocus: true, autocomplete: "id_type" %>
  </div> 
  
  <div class="field">
    <%= f.label :nationality %><br />
    <%= f.nationality_field :nationality, autofocus: true, autocomplete: "nationality" %>
  </div>

  <div class="field">
    <%= f.label id_card %><br />
    <%= f.id_card_field id_card, autofocus: true, autocomplete: "id_card" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.phone_number_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div> 
  
  <div class="field">
    <%= f.label photo %><br />
    <%= f.photo_field photo, autofocus: true, autocomplete: "photo" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "senseis/shared/links" %>
